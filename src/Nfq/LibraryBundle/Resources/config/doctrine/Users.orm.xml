<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Nfq\LibraryBundle\Entity\Users" table="users">
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="firstname" type="string" column="firstname" length="255" nullable="false"/>
    <field name="lastname" type="string" column="lastname" length="255" nullable="false"/>
    <field name="email" type="string" column="email" length="254" nullable="false"/>
    <field name="password" type="string" column="password" length="20" nullable="false"/>
    <field name="salt" type="string" column="salt" length="100" nullable="true"/>
    <field name="isAdmin" type="boolean" column="is_admin" nullable="false"/>
    <many-to-many field="tag" target-entity="Tags" inversed-by="user">
      <join-table name="user_tags">
        <join-columns>
          <join-column name="user_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="tag_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
