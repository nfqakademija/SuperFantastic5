<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Nfq\LibraryBundle\Entity\Books" table="books">
    <indexes>
      <index name="fk_Books_Descriptions_idx" columns="description_id"/>
      <index name="fk_Books_Users_idx" columns="owner_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <many-to-one field="owner" target-entity="Users">
      <join-columns>
        <join-column name="owner_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="description" target-entity="Descriptions">
      <join-columns>
        <join-column name="description_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
