<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Nfq\LibraryBundle\Entity\Descriptions" table="descriptions">
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="author" type="string" column="author" length="255" nullable="true"/>
    <field name="title" type="string" column="title" length="255" nullable="true"/>
    <field name="coverUrl" type="string" column="cover_url" length="255" nullable="true"/>
    <field name="language" type="string" column="language" length="2" nullable="true"/>
    <field name="description" type="string" column="description" length="1024" nullable="true"/>
    <field name="publisher" type="string" column="publisher" length="255" nullable="true"/>
    <field name="year" type="date" column="year" nullable="true"/>
    <field name="pageNo" type="smallint" column="page_no" nullable="true"/>
    <field name="isbn" type="string" column="isbn" length="13" nullable="true"/>
    <many-to-many field="tag" target-entity="Tags" inversed-by="description">
      <join-table name="book_tags">
        <join-columns>
          <join-column name="description_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="tag_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
