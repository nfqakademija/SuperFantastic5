{% extends 'base.html.twig' %}

{% block body %}
    {% for item in books %}
<div class="panel panel-primary">
    <div class="panel-heading"></div>
        <div class="panel-body">
        <!--  <div class="container-fluid"> -->
            <div class="row">
                <div class="col-md-3" >
                    <img src="{{ item.coverUrl }}" height="300" width="100%">
                </div>
                <div class="col-md-9">
                    <h3>{{ item.title }}</h3>
                    <h5>{{ item.author }}</h5>
                    {{ "<br>" }}
                    <p>
                        <b>Description: </b>{{ item.description }}
                    </p>
                    {{ "<br>" }}
                    <b>Language: </b>{{ item.language }}
                    {{ "<br>" }}
                    <b>Pages: </b>{{ item.pageNo }}<br>
                    <b>ISBN: </b>{{ item.isbn }} <br>
                    <b>Available books: </b>{{ free }}
                    <div class="pull-right">
                        {% if free == 0 %}
                            <a href="/order/{{ item.id }}" class="btn btn-danger">RESERVE</a>
                        {% else %}
                            <a href="/order/{{ item.id }}" class="btn btn-primary">TAKE A BOOK</a>
                        {% endif %}
                        <a href="#" class="btn btn-default">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    {% endfor %}
{% endblock %}
