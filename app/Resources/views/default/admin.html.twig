{% extends 'base.html.twig' %}
{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">Add book by ISBN:</div>
        <div class="panel-body">
            <form class="navbar-form" action="/add" method="GET">
                <input type="text" size="75" name="isbn"/>
                <input class="btn btn-default" type="submit" id="submit" value="ADD BOOK"/>
            </form>
        </div>
        <div class="panel-footer clearfix">
        </div>
    </div>


    {% if unreturnedBooks is defined %}
        <div class="panel panel-primary">
            <div class="panel-heading">UNRETURNED ORDERS:</div>
            <div class="panel-body">
                <table class="table" border ="2">
                    <tr>
                        <td>Return</td>
                        <td>Id</td>
                        <td>Firstname</td>
                        <td>Lastname</td>
                        <td>Book title</td>
                        <td>To return at</td>
                    </tr>
                    {% for item in unreturnedBooks %}
                        <tr>
                            <td><a href="/admin/return/{{ item.id }}" class="btn btn-default">Return</a></td>
                            <td> {{ item.id }}
                            <td> {{ item.firstname }} </td>
                            <td> {{ item.lastname }} </td>
                            <td> {{ item.title }} </td>
                            <td> {{ item.toReturnAt|date("m/d/Y") }} </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="panel-footer clearfix">
            </div>
        </div>
    {% endif %}
{% endblock %}