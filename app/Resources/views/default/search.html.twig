{% extends 'base.html.twig' %}
{% block body %}
    {% if books is empty %}
        <h1>Not found. Try a different keyword</h1>
    {% endif %}
    <div class="count">
        <h3>{{ pagination.getTotalItemCount }} {% if pagination.getTotalItemCount > 1 %} results {% else %} result {% endif %}
            found for "{{ keyword }}" </h3>
    </div>
    <div class="row">
        {% for item in pagination %}
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading"></div>
                    <div class="panel-body fixed-panel">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="container image-container">
                                    <img src="{{ item.coverUrl }}" class="img-responsive">
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <b>Author: </b>{{ item.author }}<br>
                                <b>Title: </b> <a href="/book/{{ item.id }}">{{ item.title }}</a><br>
                                <b>Language: </b>{{ item.language }}<br>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer clearfix">
                        <div class="pull-right">
                            <a href="/book/{{ item.id }}" class="btn btn-primary">READ MORE</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {# display navigation #}
    <div class="navigation">
        <ul class="pagination">
            <li>{{ knp_pagination_render(pagination) }}</li>
        </ul>
    </div>
{% endblock %}