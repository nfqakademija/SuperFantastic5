{% extends 'base.html.twig' %}
{% block body %}
    {% if books is empty %}
        <h1>Not found. Try different keyword</h1>
    {% endif %}

    {% for item in books %}
        <div class="panel-body">
            <div class="panel panel-primary">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <!--  <div class="container-fluid"> -->
                    <div class="row">
                        <div class="col-md-2" >
                            <img src="{{ item.coverUrl }}">
                        </div>
                        <div class="col-md-10">
                            <h4>{{ item.title }}</h4>
                            <h5>{{ item.author }}</h5>
                            <b>Language: </b>{{ item.language }}
                            {{ "<br>" }}
                            <b>Pages: </b>{{ item.pageNo }}<br>
                            <div class="pull-right">
                                <a href="/book/{{ item.id }}" class="btn btn-primary">READ MORE</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}